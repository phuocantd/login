<Window x:Class="login.dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login"
        mc:Ignorable="d"
        Title="Dashboard" Height="620" Background="Transparent" AllowsTransparency="True" Width="1000" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid Margin="0,20,0,0" Background="#00000000">
        <Grid HorizontalAlignment="Right" Height="600" VerticalAlignment="Top" Width="200" Background="DarkBlue" Margin="0,0,800,0">
            <Rectangle RadiusX="200" RadiusY="200" Height="200" Width="200" Margin="0,0,0,400">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="icons/phuocan.jpg"></ImageBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Button Content="Home " Margin="0,275,0,0" VerticalAlignment="Top" Width="200" Height="50" Background="{x:Null}" FontSize="36" Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Right" HorizontalAlignment="Left"/>

            <TextBlock HorizontalAlignment="Left" Margin="0,219,0,0" TextWrapping="Wrap" Text="An Nguyen Phuoc" VerticalAlignment="Top" Foreground="White" FontSize="28" FontFamily="Monotype Corsiva" Width="200"/>
            <Button Content="Logout" Margin="0,529,0,0" VerticalAlignment="Top" Width="200" Height="50" Background="{x:Null}" FontSize="36" Foreground="White" BorderBrush="{x:Null}" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Click="gotoLogin"/>
            <Image HorizontalAlignment="Left" Height="50" Margin="10,529,0,0" VerticalAlignment="Top" Width="50" Source="icons/logout.png"/>
            <Image HorizontalAlignment="Left" Height="50" Margin="10,275,0,0" VerticalAlignment="Top" Width="50" Source="icons/home.png"  />
        </Grid>
        <Grid HorizontalAlignment="Left" Height="50" Margin="200,0,0,0" VerticalAlignment="Top" Width="800" Background="DarkBlue" MouseLeftButtonDown="moveDashboard">
            <Image HorizontalAlignment="Left" Height="50" Margin="750,0,0,0" VerticalAlignment="Top" Width="50" Source="icons/off.png" MouseLeftButtonDown="turnOffDashBoard"/>
        </Grid>
        <Canvas HorizontalAlignment="Left" Height="550" Margin="200,50,0,0" VerticalAlignment="Top" Width="800" Background="White">
            <Canvas Height="150" Width="800" Background="#FF00E8FF">
                <TextBlock Canvas.Left="136" TextWrapping="Wrap" Text="WPF App" Canvas.Top="25" FontSize="100" FontFamily="Colonna MT" FontWeight="Bold"/>
                <Image Height="205" Canvas.Left="525" Width="265" Source="icons/visualstudio.png" Canvas.Top="-20"/>
            </Canvas>
            <Canvas Height="400" Canvas.Top="150" Width="800" Background="White">

            </Canvas>




        </Canvas>

    </Grid>
</Window>
