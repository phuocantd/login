<Window x:Class="login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login"
        mc:Ignorable="d"
        Title="Login" Height="380" Width="300" Top="20" Left="500" AllowsTransparency="True" WindowStyle="None" Background="Transparent" ResizeMode="NoResize">
    <Canvas MouseDown="moveMouse" Width="300" Margin="0,20,0,0">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#CC0000FF" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Canvas Height="20" Width="300">
            <Label MouseLeftButtonDown="lblClose_Click" Name="lblClose" Content="X" Foreground="White" Canvas.Left="280"/>
            <Label MouseLeftButtonDown="lblMinimize_Click" Name="lblMinimize" Content="-" Foreground="White" Canvas.Left="265"/>
            <Label Name="lblTitle" Content="Login" Foreground="White"/>
        </Canvas>
        <Canvas  Margin="0,20,0,0">
            <Label Content="Sign In" Foreground="#FF89F704"  FontSize="35" FontWeight="ExtraBold" Canvas.Left="80" Canvas.Top="0" RenderTransformOrigin="0.517,0.123"/>
            <Label Content="📧 Email" Foreground="#FF15F1A1" FontSize="20"  Canvas.Left="40" Canvas.Top="75" />
            <TextBox Name="txtEmail" FontSize="17" Height="30" Width="230"  Foreground="#FFFFB400" Background="Transparent" Canvas.Left="40" Canvas.Top="120" />
            <Label Content="🔑 Password" Foreground="#FF15F1A1" FontSize="20"  Canvas.Left="40" Canvas.Top="165" />
            <PasswordBox Name="txtPass" PasswordChar="*" FontSize="20" Foreground="#FFFFB400" Background="Transparent" Canvas.Left="40" Canvas.Top="210" Height="30" Width="230"/>
            <Button Click="btnLogin" Content="Login" FontSize="25" Width="150" Canvas.Left="80" Canvas.Top="255" Background="#FFACB40D" Foreground="PapayaWhip" BorderBrush="#FF2B21F7" />
            <Label MouseDown="lblCreateAccount" Foreground="#FFC9B4B4" Content="Create an account" Canvas.Left="100" Canvas.Top="300"/>
        </Canvas>

    </Canvas>
</Window>
