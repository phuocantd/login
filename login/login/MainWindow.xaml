<Window x:Class="login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login"
        mc:Ignorable="d"
        Title="Login" Height="680" Width="320" Top="20" Left="500">
    <Canvas Background="DarkSlateGray">
        <WrapPanel Margin="20,100">
            <Label Foreground="WhiteSmoke" Target="{Binding ElementName=txtUser}">_User:</Label>
            <TextBox Foreground="WhiteSmoke" Background="DimGray" Name="txtUser" Width="150" Margin="50,0"></TextBox>
            
        </WrapPanel>
        <WrapPanel Margin="20,150">
            <Label Foreground="WhiteSmoke" Target="{Binding ElementName=txtPass}">_Password:</Label>
            <PasswordBox Foreground="WhiteSmoke" Background="DimGray" PasswordChar="*" Name="txtPass" Width="150" Margin="24,0"></PasswordBox>
        </WrapPanel>
        
    </Canvas>
</Window>
